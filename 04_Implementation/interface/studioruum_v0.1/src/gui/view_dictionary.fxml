<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
        <VBox prefHeight="400.0" prefWidth="640.0">
            <children>
                <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
                    <children>
                  <Label alignment="CENTER" layoutY="49.0" prefHeight="64.0" prefWidth="647.0" text="dictionary">
                     <font>
                        <Font name="Segoe UI Semibold" size="43.0" />
                     </font>
                  </Label>
                        <TableView fx:id="dictTable" layoutX="203.0" layoutY="136.0" prefHeight="235.0" prefWidth="263.0" style="-fx-background-color: transparent;">
                            <columns>
                                <TableColumn fx:id="frontCol" prefWidth="75.0" text="Front">
                                <cellValueFactory>
                                    <PropertyValueFactory property="front" />
                                </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="backCol" prefWidth="75.0" text="Back">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="back" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                        </TableView>
                        <Button layoutX="38.0" layoutY="69.0" mnemonicParsing="false" onAction="#goHome" text="Home" />
                        <ComboBox fx:id="dictDrpDwn" layoutX="480.0" layoutY="101.0" onAction="#displayDict" prefHeight="25.0" prefWidth="150.0" promptText="Select a dictionary" />
                        <Button fx:id="newDict" layoutX="38.0" layoutY="142.0" mnemonicParsing="false" onAction="#saveDict" prefHeight="25.0" prefWidth="117.0" text="New Dictionary" />
                        <Button fx:id="updateDict" layoutX="38.0" layoutY="172.0" mnemonicParsing="false" onAction="#updateDict" prefHeight="25.0" prefWidth="117.0" text="Rename Dictionary" visible="false" />
                        <Button fx:id="deleteDict" layoutX="38.0" layoutY="202.0" mnemonicParsing="false" onAction="#deleteDict" prefHeight="25.0" prefWidth="117.0" text="Delete Dictionary" visible="false" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
